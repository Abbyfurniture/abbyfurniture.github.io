{
	"builds": [
		{
			"name": "dev",
			"js": {
				"declaration": false,
				"webClean": true
			}
		}
	], 
	"files": [
		{
			"output": "wwwroot/css/site.css",
			"input": "src/css/site.less"
		},
		{
			"output": "wwwroot/css/index.css",
			"input": "src/css/index.less"
		},
		{
			"output": "wwwroot/css/about.css",
			"input": "src/css/about.less"
		},
		{
			"output": "wwwroot/css/services.css",
			"input": "src/css/services.less"
		},
		{
			"output": "wwwroot/css/contact.css",
			"input": "src/css/contact.less"
		},
		{
			"output": "wwwroot/js/contact.js",
			"input":  "src/js/contact.ts"
		},
		{
			"output": "wwwroot/css/gallery.css",
			"input": "src/css/gallery.less"
		},
		{
			"output": "wwwroot/js/site.js",
			"input": [ "src/js/site.ts", "src/js/animation.ts", "src/js/header.ts" ]
		},
		{
			"output": "wwwroot/js/index.js",
			"input": "src/js/index.ts"
		},
		{
			"output": "wwwroot/js/gallery.js",
			"input": "src/js/gallery.ts"
		}
	],
	"images": [
		{
			"output": "wwwroot/img",
			"input": "src/img/**",
			"outputFormat": "webp"
		}
	]
} 