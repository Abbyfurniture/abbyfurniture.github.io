<section class="hero">
    <article>
        <div class="hero-left fade-left">
            <span>
                Abby<br />
                Exotic<br />
                Furniture
            </span>
            <p>Transforming Furniture, Elevating Spaces</p>
            <a href="gallery" class="--button" aria-label="button page gallery">
                <partial name="Assets/Emogy" />
                <span>View More</span>
            </a>
            <div class="hero-scroll">
                <partial name="Assets/Arrow" />
            </div>
        </div>
        <div class="hero-image fadein">
            <img src="/img/hero/hero1.webp" alt="hero image" />
        </div>
        <div class="hero-right">
            <div class="image fade-right">
                <div class="hero-right-image">
                    <img src="/img/hero/hero2.webp" alt="small hero image" />
