<section class="touch">
    <article>
        <h2 class="fadein">Get in Touch</h2>
        <p class="fadein">
            Please fill the form and we’ll get back to you the soonest!
        </p>
        <div class="touch-form fadein">
            <div>
                <span>Full Name *</span>
                <input type="text"  spellcheck="false" name="name"/>
            </div>
            <div>
                <span>Mobile *</span>
                <input type="text" spellcheck="false" name="mobile" />
            </div>
            <div class="--split">
                <span>Email</span>
                <input type="text" spellcheck="false" name="email" />
            </div>
            <div class="--split">
                <span>Message</span>
                <textarea spellcheck="false" name="message"></textarea>
            </div>
        </div>
        <div class="touch-submit fadein">
            <span class="error"></span>
            <button id="submit" class="--button">
                <partial name="Assets/Emogy" />
                <span>Submit</span>
            </button>
        </div>
    </article>
</section>

